<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/NewsListItemLinearLayout">

    <TextView
        android:id="@+id/id_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/id_user_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_avatar_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_avatar_iv"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:id="@+id/id_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wilshion"
                android:textColor="@color/common_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/id_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8月17日"
                android:textColor="@color/gray"
                android:textSize="12sp"/>
        </LinearLayout>

        <com.flyco.roundview.RoundTextView
            android:layout_alignParentRight="true"
            android:id="@+id/id_follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:text="关注"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/red"
            app:rv_backgroundPressColor="@color/orange"
            app:rv_cornerRadius="5dp"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/id_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>